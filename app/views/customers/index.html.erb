<h1>All Customers</h1>
<%= link_to 'New', new_customer_path %>
<table>
    <tr>
        <th>Name</th>
        <th>Address</th>
    </tr>
    <% @customers.each do |customer| %>
        <tr>
            <td>
                <%= customer.name %>
            </td>
            <td>
                <%= customer.address %>
            </td>
            <td>
                <%= link_to 'Show', customer_path(customer) %>
            </td>
            <td>
                <%= link_to 'Edit', edit_customer_path(customer) %>
            </td>
            <td>
                <%= link_to 'Destroy', customer_path(customer),
                method: :delete,
                data:{confirm: 'Are you sure?'}
                %>
            </td>
        </tr>
    <% end %>
</table>
