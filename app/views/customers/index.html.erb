<div class="row">
  <div class="col-md-6">
      <h1>All Customers</h1>

      <%= link_to 'New Customer', new_customer_path, class: "btn btn-default" %>

      <table class="table">
          <tr>
              <th>Name</th>
              <th>Address</th>
              <th></th>
          </tr>
          <% @customers.each do |customer| %>
              <tr>
                  <td>
                      <%= customer.name %>
                  </td>
                  <td>
                      <%= customer.address %>
                  </td>
                  <td>
                      <%= link_to 'Show', customer_path(customer) %>
                      <%= link_to 'Edit', edit_customer_path(customer) %>
                      <%= link_to 'Destroy', customer_path(customer),
                      method: :delete,
                      data:{confirm: 'Are you sure?'}
                      %>
                  </td>
              </tr>
          <% end %>
      </table>
  </div>
</div>
